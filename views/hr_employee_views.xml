<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_employee_form_inherited" model="ir.ui.view">
            <field name="name">view.employee.form.inherited</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button class="oe_stat_button" name="show_training_ids" icon="fa-list" type="object">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value">
                                <field name="training_ids_count" class="mr4"/>
                                <span>Training</span>
                            </span>
                            <span class="o_stat_text">
                                planning
                            </span>
                        </div>
                    </button>
                </div>
            </field>
        </record>

    </data>
</odoo>
